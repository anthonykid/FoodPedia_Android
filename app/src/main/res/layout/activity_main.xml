<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1BC60"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Anda Ingin Melihat Menu Mie Goreng atau Nasi Goreng"
        android:textColor="#5C3E0B"
        android:textSize="24sp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:id="@+id/imageButtonMie"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/mie4" />

    <ImageButton
        android:id="@+id/imageButtonNasi"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/nasgor1" />

    </LinearLayout>
</ScrollView>